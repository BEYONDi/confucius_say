<h1>Users</h1>
<%= link_to('Logout', destroy_user_session_path, :method => :delete ) %>
<hr/>
<div class="panel panel-primary">
<table class="table">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Full Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @users.each_with_index do |user, index| %>
      <tr>
        <td>
          <%= index += 1 %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-chat", "data-sid" => current_user.id, "data-rip" => user.id %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <%# <%= paginate @contacts %>
  <%# <%= page_entries_info @contacts %>
</table>
</div>
<br>
