<div class="chatboxhead">
  <div class="chatboxtitle">
    <i class="fa fa-comment"></i>
    <h1><%= @receiver.name %></h1>
  </div>
  <div class="chatboxoptions">
    <%= link_to "<i class='fa fa-minus'></i> ".html_safe, "#", class: "toggleChatBox", "data-cid" => @chat_id %>
    &nbsp;&nbsp;
    <%= link_to "<i class='fa fa-times'></i> ".html_safe, "#", class: "clostChat", "data-cid" => @chat_id %>
  </div>
  <br clear="all"/>
</div>
<div class="chatboxcontent">
  <% if @message.any? %>
    <%= render @message %>
  <% end %>
</div>
<div class="chatboxinput">
  <%= form_for( [@chat, @message], :remote => true, :html => {id: "chat_form_#{@chat.id}"}) do |f| %>
    <%= f.text_area :body, class: "chatboxtextarea", "data-cid" => @chat.id %>
  <% end %>
</div>
<%= subscribe_to chat_path(@chat) %>
